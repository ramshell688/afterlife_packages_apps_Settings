<?xml version="1.0" encoding="utf-8"?>

<PreferenceScreen
    android:title=" "
    app:keywords="@string/keywords_android_version"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    
    <com.android.settingslib.widget.LayoutPreference
        android:clickable="true"
        android:layout="@layout/afterlife_logo"
        android:key="afterlife_logo"
        app:controller="com.android.settings.deviceinfo.firmwareversion.afterlifeLogoController"/>
        
    <com.android.settingslib.widget.LayoutPreference
        android:layout="@layout/afterlife_maintainer"
        android:title="@string/afterlife_maintainer"
        android:key="afterlife_maintainer"
        android:summary="@string/summary_placeholder"
        app:controller="com.android.settings.deviceinfo.firmwareversion.afterlifeMaintainerController"
        app:enableCopying="true"/>
        
    <declan.prjct.settings.aboutphone.AfterlifePreference
        android:title="@string/firmware_version"
        android:key="os_firmware_version"
        android:summary="@string/summary_placeholder"
        app:cardRight="false"
        app:cardType="topLeft"
        app:controller="com.android.settings.deviceinfo.firmwareversion.FirmwareVersionDetailPreferenceController"
        app:enableCopying="true"
        app:searchable="false"
        app:showDividerBottom="true"
        app:showDividerRight="true"/>
        
    <declan.prjct.settings.aboutphone.AfterlifePreference
        android:title="@string/afterlife_version"
        android:key="afx_version"
        android:summary="@string/summary_placeholder"
        app:cardRight="true"
        app:cardType="topRight"
        app:controller="com.android.settings.deviceinfo.firmwareversion.AfxVersionDetailPreferenceController"
        app:enableCopying="true"
        app:searchable="false"
        app:showDividerBottom="true"
        app:showDividerRight="false"/>
        
    <declan.prjct.settings.aboutphone.AfterlifePreference
        android:title="@string/security_patch"
        android:key="security_key"
        app:cardRight="false"
        app:cardType="middle"
        app:controller="com.android.settings.deviceinfo.firmwareversion.SecurityPatchLevelPreferenceController"
        app:enableCopying="true"
        app:showDividerBottom="true"
        app:showDividerRight="true"/>
        
    <declan.prjct.settings.aboutphone.AfterlifePreference
        android:title="@string/module_version"
        android:key="module_version"
        android:summary="@string/summary_placeholder"
        app:cardRight="true"
        app:cardType="middle"
        app:controller="com.android.settings.deviceinfo.firmwareversion.MainlineModuleVersionPreferenceController"
        app:enableCopying="true"
        app:showDividerBottom="true"
        app:showDividerRight="false"/>
        
    <declan.prjct.settings.aboutphone.AfterlifePreference
        android:title="@string/kernel_version"
        android:key="kernel_version"
        android:summary="@string/summary_placeholder"
        app:cardRight="false"
        app:cardType="middle"
        app:controller="com.android.settings.deviceinfo.firmwareversion.KernelVersionPreferenceController"
        app:enableCopying="true"
        app:showDividerBottom="true"
        app:showDividerRight="true"/>
        
    <declan.prjct.settings.aboutphone.AfterlifePreference
        android:title="@string/build_number"
        android:selectable="false"
        android:key="os_build_number"
        android:summary="@string/summary_placeholder"
        app:cardRight="true"
        app:cardType="middle"
        app:controller="com.android.settings.deviceinfo.firmwareversion.SimpleBuildNumberPreferenceController"
        app:enableCopying="true"
        app:showDividerBottom="true"
        app:showDividerRight="false"/>
        
    <declan.prjct.settings.aboutphone.AfterlifePreference
        android:title="@string/baseband_version"
        android:selectable="false"
        android:key="base_band"
        android:summary="@string/summary_placeholder"
        app:cardBottom="true"
        app:cardRight="false"
        app:cardType="botLeft"
        app:controller="com.android.settings.deviceinfo.firmwareversion.BasebandVersionPreferenceController"
        app:enableCopying="true"
        app:showDividerBottom="false"
        app:showDividerRight="true"/>
        
    <declan.prjct.settings.aboutphone.AfterlifePreference
        android:title="@string/selinux_status"
        android:key="selinux_status"
        android:summary="@string/summary_placeholder"
        app:cardBottom="true"
        app:cardRight="true"
        app:cardType="botRight"
        app:controller="com.android.settings.deviceinfo.firmwareversion.SelinuxStatusPreferenceController"
        app:enableCopying="false"
        app:showDividerBottom="false"
        app:showDividerRight="false"/>
        
</PreferenceScreen>